[sub_resource type="Shader" id=3]
code = "shader_type spatial;

render_mode unshaded;

uniform float progress = 0.5;
uniform sampler2D image : hint_albedo;
uniform vec3 uv1_scale;
uniform vec3 uv1_offset;

varying vec3 pos;

void vertex() {
	UV=UV*uv1_scale.xy+uv1_offset.xy;
	pos = VERTEX;
}


void fragment()
{
	vec4 color_multiplication = vec4(1.0, 1.0, 1.0, 1.0);
	
	if (pos.y > 0.749) // 0.75 causes z-fighting
	{
		if (progress <= 1.0)
		{
		color_multiplication = vec4(0.05, 0.05, 0.05, 1.0);
		}
	}
	
	else if (UV.y < progress)
	{
		color_multiplication = vec4(0.05, 0.05, 0.05, 1.0);
	}
	
	if (pos.x < -0.749) // 0.75 causes z-fighting
	{
		if (UV.y < progress + 1.0)
		{
			color_multiplication = vec4(0.05, 0.05, 0.05, 1.0);
		}
	}
	
	if (progress <= 0.0)
	{
		color_multiplication = vec4(1.0, 1.0, 1.0, 1.0);
	}
	
	vec4 albedo_tex = texture(image, UV);
	ALBEDO = albedo_tex.rgb * vec4(1.0, 0.0, 0.0, 1.0).rgb * color_multiplication.rgb;
}
"

[resource]
resource_local_to_scene = true
shader = SubResource( 3 )
shader_param/progress = 0.5
shader_param/uv1_scale = Vector3( 3, 2, 2 )
shader_param/uv1_offset = null
shader_param/image = ExtResource( 1 )
