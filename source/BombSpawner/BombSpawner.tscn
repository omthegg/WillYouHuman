	}
	
	if (progress <= 0.0)
	{
		color_multiplication = vec4(1.0, 1.0, 1.0, 1.0);
	}
	
	vec4 albedo_tex = texture(image, UV);
	ALBEDO = albedo_tex.rgb * vec4(1.0, 0.0, 0.0, 1.0).rgb * color_multiplication.rgb;
}
