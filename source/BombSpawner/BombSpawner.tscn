void vertex() {
	UV=UV*uv1_scale.xy+uv1_offset.xy;
}


void fragment()
{
	vec4 color_multiplication = vec4(1.0, 1.0, 1.0, 1.0);
	
	if (UV.y > 1.0 && NORMAL.y > 0.0 && progress <= 1.0)
	{
		color_multiplication = vec4(0.05, 0.05, 0.05, 1.0);
	}
	else if (UV.y < progress)
